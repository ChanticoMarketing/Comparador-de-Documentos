modules = ["nodejs-20", "postgresql-16"]

[[ports]]
localPort = 3000
externalPort = 3001

[[ports]]
localPort = 4000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "node index.js"]
build = ["sh", "-c", "npm run build"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 39883050
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"

[env]
REPLIT_NIX_CHANNEL = "stable-24_05"
REPLIT_KEEP_PACKAGE_DEV_DEPENDENCIES = "1"